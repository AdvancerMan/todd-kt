// parameters:
// name --- level name that will be shown in "choose level" menu or level editor
// objects --- array of objects on a level

// each element of `objects` parameter has:
// type --- type of object, available types can be seen in PassiveObjectInfo class in PassiveObjectInfo.kt file
// arguments of object --- varies on object type

// example:

{
  "name": "testName",
  "objects": [
    {
      "type": "solid",
      "drawable": {
        "name": "arenaSolid",
        "size": [200, 50],
        "offset": [0, 0]
      },
      "bodyPatternType": "rectangleWithTopGS",
      "b2dType": "static",
      "worldBodyPosition": [0, -50],
      "bodySize": [200, 50]
    },

    {
      "type": "solid",
      "drawable": {
        "name": "arenaSolid",
        "size": [200, 50],
        "offset": [0, 0]
      },
      "bodyPattern": {
        "bodyPatternType": "rectangleWithTopGS",
        "b2dType": "static",
        "worldBodyPosition": [-200, -50],
        "bodySize": [200, 50]
      }
    },

    {
      "type": "solid",
      "drawable": {
        "name": "arenaSolid",
        "size": [200, 200],
        "offset": [0, 0]
      },
      "bodyPattern": {
        "bodyPatternType": "polygonWithTopGS",
        "b2dType": "static",
        "worldBodyCenter": [-300, 50],
        "localBodyVertices": [[-100, 100], [-100, -100], [100, -100], [100, 0], [0, 100]]
      }
    },

    {
      "type": "halfCollided",
      "drawable": {
        "name": "arenaHalfCollided",
        "size": [200, 50],
        "offset": [0, 0]
      },
      "drawableName": "arenaHalfCollided",
      "bodyPatternType": "rectangleWithTopGS",
      "b2dType": "static",
      "worldBodyPosition": [200, -50],
      "bodySize": [200, 50]
    },

    {
      "type": "cloudy",
      "drawable": {
        "name": "arenaCloudy",
        "size": [200, 50],
        "offset": [0, 0]
      },      "bodyLowerLeftCornerOffset": [0, 0],

      "bodyPatternType": "rectangleWithTopGS",
      "b2dType": "static",
      "worldBodyPosition": [400, -50],
      "bodySize": [200, 50],
      "sinceContactTillInactive": 1,
      "sinceInactiveTillActive": 1
    },

    {
      "type": "jumper",
      "drawable": {
        "name": "arenaJumper",
        "size": [200, 50],
        "offset": [0, 0]
      },
      "bodyPatternType": "rectangleWithTopGS",
      "b2dType": "static",
      "worldBodyPosition": [600, -50],
      "bodySize": [200, 50],
      "pushPower": 800
    },

    {
      "type": "portal",
      "drawable": {
        "name": "arenaPortal",
        "size": [100, 100],
        "offset": [0, 0]
      },
      "bodyPatternType": "circle",
      "b2dType": "static",
      "worldBodyCenter": [850, -25],
      "bodyRadius": 50,
      "teleportTo": [0, 0],
      "teleportDelay": 0.1
    },

    {
      "type": "trampoline",
      "drawable": {
        "name": "arenaTrampoline",
        "size": [200, 50],
        "offset": [0, 0]
      },
      "bodyPatternType": "rectangleWithTopGS",
      "b2dType": "static",
      "worldBodyPosition": [900, -50],
      "bodySize": [200, 50]
    },

    {
      "type": "travolator",
      "drawable": {
        "name": "arenaTravolator",
        "size": [200, 50],
        "offset": [0, 0]
      },
      "bodyPatternType": "rectangleWithTopGS",
      "b2dType": "static",
