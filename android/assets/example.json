////////// INTRODUCTION //////////

// Hello! It's a comment
// WARNING: usually json doesn't have comments
//          this application is an exception

{
  "kek": "kek",
  "lol": "lol",
  "string": "string",
  "null": null,
  "number": 123,
  "negative": -123,
  "true": true,
  "false": false,
  "double": 123.321,
  123: "not only strings as keys",
  "myArray": [
    "arrays",
    "are",
    "allowed",
    "too",
    {
      "im object": "hello",
      "arrays aren't strongly typed": 42
    }
    "and"
    "commas"
    "aren't"
    "necessary", // <-- no error
  ]
  "no": "commas"
  "LoL": 101
  101: "lol"
}

// no newline --> error

{
  "and": "more",
  "objects": "in",
  "one": "file"
}

////////// TEXTURE INFOS //////////

// parameters:
// name --- you should ALWAYS give a name to an object
// type --- reg (texture region), anim (animation), anims (animations)

// reg:
// path --- path to picture with file extension
// xywh --- bounding rectangle for texture region (x, y, width, height)

{
  "type": "reg",
  "name": "test",
  "path": "very/long/path/testPic.png",
  "xywh": [10, 20, 10, 10]
}

// anim:
// path --- path to picture with file extension (one path is used for all frames)
// frameDuration --- duration of each frame in ms
// bounds --- list of "xywh"

{
  "type": "anim",
  "name": "testAnim",
  "path": "testAnim.png",
  "frameDuration": 100,
  "bounds": [
    [0, 0, 10, 10],
    [0, 10, 10, 10],
    [10, 0, 10, 10],
    [10, 10, 10, 10]
  ]
}

// also allowed:

{
  "type": "anim",
  "name": "testAnim",
  "path": "testAnim.png",
  "frameDuration": 100,
  "xywh": [0, 0, 20, 20],
  "r": 2,  // rows
  "c": 2  // columns
}

// anims:
// (parameter) anims --- map: animation type TO anim without name and type (look at the example)
// animation types: STAY, RUN, JUMP, FALL, LANDING, SHOOT

{
  "type": "anims",
  "name": "testAnims",
  "anims": {
    "RUN": {
      "path": "testAnim.png",
      "frameDuration": 100,
      "xywh": [0, 0, 20, 10],
      "r": 1,
      "c": 2
    },
    "JUMP": {
      "path": "testAnim.png",
      "frameDuration": 100,
      "xywh": [0, 10, 20, 10],
      "r": 1,
      "c": 2
    }
  }
}
